<%= render "shared/header" %>
<div class="new-main">
  <%= form_with model: @day, url: training_path(@day.id), class: "form-wrapper", local: true do |f| %>
    <div class="new-form-header">
      <span class="form-header-text">トレーニング実施日[編集]</span>
    </div>

    <div class="error-messages-box">
      <%= render 'shared/error_messages', model: f.object %>
    </div>

    <div class="new-date-wrapper">
      <div class="new-date-wrapper-left">
        <%= f.label :date, '日付', class: "form-text" %>
      </div>
      <div class="new-date-wrapper-right">
        <%= f.date_field :date, value: @day.date, class: "form-field" %>
      </div>
    </div>

    <div class="new-target-wrapper">
      <div class="new-target-wrapper-left">
        <span class="form-text">ターゲット</span>
      </div>
      <div class="new-target-wrapper-right">
        <div class="target-group-left">
          <div class="target-form">
            <%= f.check_box :chest %>
            <%= f.label :chest, '胸' %>
          </div>
          <div class="target-form">
            <%= f.check_box :tricep %>
            <%= f.label :tricep, '上腕三頭筋' %>
          </div>
          <div class="target-form">
            <%= f.check_box :back %>
            <%= f.label :back, '背中' %>
          </div>
        </div>
        <div class="target-group-right">
          <div class="target-form">
            <%= f.check_box :shoulder %>
            <%= f.label :shoulder, '肩' %>
          </div>
          <div class="target-form">
            <%= f.check_box :bicep %>
            <%= f.label :bicep, '上腕二頭筋' %>
          </div>
          <div class="target-form">
            <%= f.check_box :abdominal %>
            <%= f.label :abdominal, '腹筋' %>
          </div>
          <div class="target-form">
            <%= f.check_box :leg %>
            <%= f.label :leg, '脚' %>
          </div>
        </div>
      </div>
    </div>

      <div class="submit-button">
        <%= f.submit "編集終了", class: "uk-button uk-button-primary" %>
        <%= link_to "トレーニング内容確認", training_path(@day.id), class: "uk-button uk-button-primary" %>
      </div>

  <% end %>

  <div class=option-buttons>
    <%= link_to "BACK", :back, class: "uk-button uk-button-secondary uk-width-1-1 uk-margin-small-bottom" %>
  </div>

</div>
<%= render "shared/footer" %>