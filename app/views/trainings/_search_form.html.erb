<div class="search-wrapper">
  <%= form_with(scope: :search, url: trainings_path, method: :get, local: true) do |f| %>
    <div class="search-header">
      <span class="search-header-text">検索フォーム</span>
    </div>
    <div class="search-field">
      <%= f.label :date ,"日付" %>
      <%= f.date_field :date_from, value: @search_params[:date_from], class: "search-form-field" %>
       ~ 
      <%= f.date_field :date_to, value: @search_params[:date_to], class: "search-form-field" %>
    </div>

    <div class="search-target-field">
        <div class="target-form">
          <%= f.check_box :chest %>
          <%= f.label :chest, '胸' %>
        </div>
        <div class="target-form">
          <%= f.check_box :shoulder %>
          <%= f.label :shoulder, '肩' %>
        </div>
        <div class="target-form">
          <%= f.check_box :back %>
          <%= f.label :back, '背中' %>
        </div>
        <div class="target-form">
          <%= f.check_box :tricep %>
          <%= f.label :tricep, '上腕三頭筋' %>
        </div>
        <div class="target-form">
          <%= f.check_box :bicep %>
          <%= f.label :bicep, '上腕二頭筋' %>
        </div>
        <div class="target-form">
          <%= f.check_box :abdominal %>
          <%= f.label :abdominal, '腹筋' %>
        </div>
        <div class="target-form">
          <%= f.check_box :leg %>
          <%= f.label :leg, '脚' %>
        </div>
    </div>

    <div class="actions">
      <%= f.submit "検索", class: "uk-button uk-button-primary uk-width-1-3" %>
    </div>
  <% end %>
</div>